<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/listCourse_BUTTON_signIn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@id/listCourse_TEXT_courseName"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_delete_24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/listCourse_TEXT_courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/listCourse_BUTTON_signIn"
            android:ellipsize="end"
            android:maxLines="5"
            android:minLines="2"
            android:text="COMMENT_CONTEXT"
            android:textSize="18sp" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>