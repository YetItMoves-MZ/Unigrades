<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <FrameLayout
        android:id="@+id/course_FRAMELAYOUT_teacherOrStudent"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_TEXT_courseName">


    </FrameLayout>

    <TextView
        android:id="@+id/course_TEXT_courseName"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/ic_launcher_background"
        android:textStyle="bold"
        android:fontFamily="@font/josefin_sans_bold"/>

    <TextView
        android:id="@+id/course_TEXT_academicCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_FRAMELAYOUT_teacherOrStudent"

        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/ic_launcher_background"
        android:fontFamily="@font/josefin_sans_semi_bold"/>

    <TextView
        android:id="@+id/course_TEXT_averageScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/include"
        app:layout_constraintEnd_toEndOf="@+id/course_TEXT_academicCredits"
        app:layout_constraintStart_toStartOf="@+id/course_TEXT_academicCredits"
        app:layout_constraintTop_toBottomOf="@+id/course_TEXT_academicCredits"

        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:textColor="@color/ic_launcher_background"
        android:fontFamily="@font/josefin_sans_semi_bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>