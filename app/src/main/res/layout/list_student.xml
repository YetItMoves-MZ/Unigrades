<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/listStudent_BUTTON_saveGrade"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_save_24" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/listStudent_EDITTEXT_grade"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/listStudent_BUTTON_saveGrade"
            android:ellipsize="end"
            android:ems="10"
            android:inputType="number"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:textSize="15sp"

            android:gravity="center"
            android:textColor="@color/ic_launcher_background"
            android:fontFamily="@font/josefin_sans_regular"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/listStudent_TEXT_studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/listStudent_EDITTEXT_grade"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="STUDENT_NAME"
            android:textSize="18sp"

            android:gravity="center"
            android:textColor="@color/ic_launcher_background"
            android:fontFamily="@font/josefin_sans_regular"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>